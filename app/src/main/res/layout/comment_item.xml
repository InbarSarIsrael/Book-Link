<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/dusty_rose">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Username -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/comment_LBL_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textColor="@color/olive_green"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Date -->
        <TextView
            android:id="@+id/comment_LBL_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_"
            android:textColor="@color/olive_green"
            android:textSize="12sp"
            android:paddingTop="20dp"
            app:layout_constraintTop_toTopOf="@id/comment_LBL_username"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Comment text -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/comment_LBL_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/this_book_was_amazing"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/comment_LBL_username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
